<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fragment_background">
    <LinearLayout
        android:id="@+id/containerOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/s16"
        android:background="@drawable/black_line">
        <TextView
            android:id="@+id/tvNumberOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Number"
            android:textColor="@color/white"
            android:textSize="@dimen/s16"
            tools:ignore="SpUsage"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/s16"
            android:layout_marginRight="@dimen/s16"
            android:layout_marginEnd="@dimen/s16"
            android:layout_marginStart="@dimen/s16"
            android:layout_marginLeft="@dimen/s16"/>
        <TextView
            android:id="@+id/tvResultNameClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Name client"
            android:textSize="@dimen/s16"
            android:textColor="@color/white"
            tools:ignore="SpUsage"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/s16"
            android:layout_marginRight="@dimen/s16"
            android:layout_marginEnd="@dimen/s16"
            android:layout_marginStart="@dimen/s16"
            android:layout_marginLeft="@dimen/s16"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/tvResultFamilyClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Family client"
            android:textSize="@dimen/s16"
            tools:ignore="SpUsage"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/s16"
            android:layout_marginRight="@dimen/s16"
            android:layout_marginEnd="@dimen/s16"
            android:layout_marginStart="@dimen/s16"
            android:layout_marginLeft="@dimen/s16"
            android:textStyle="italic"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tvResultPhoneClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Phone client"
            android:textSize="@dimen/s16"
            tools:ignore="SpUsage"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/s16"
            android:textStyle="italic"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/s16"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvResultOrder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/containerOrder"
        app:layout_constraintBottom_toTopOf="@id/btnBack"
        android:layout_marginRight="@dimen/s16"
        android:layout_marginEnd="@dimen/s16"
        android:layout_marginLeft="@dimen/s16"
        android:layout_marginStart="@dimen/s16"
        android:layout_marginBottom="@dimen/s16"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        <TextView
            android:id="@+id/tvSummaryListBooks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/s24"
            tools:text="Summary order"
            android:layout_marginRight="@dimen/s16"
            android:layout_marginEnd="@dimen/s16"
            android:layout_marginStart="@dimen/s16"
            app:layout_constraintTop_toTopOf="@id/btnBack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/btnBack"
            tools:ignore="SpUsage" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/finish"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAllCaps="false"
            android:layout_margin="@dimen/s16"
            android:background="@drawable/button_background"/>
</androidx.constraintlayout.widget.ConstraintLayout>